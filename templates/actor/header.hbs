{{! Sheet Header }}
<header class='sheet-header'>
  <img
    class='profile-img'
    src='{{actor.img}}'
    data-edit='img'
    data-action='onEditImage'
    title='{{actor.name}}'
    height='100'
    width='100'
  >
  <div class='header-fields'>
    <div class='document-name'>
      <input
        name='name'
        type='text'
        value='{{actor.name}}'
        placeholder='Name'
      >
    </div>
    {{! The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns.  }}
    <div class='resources grid grid-5col'>

      {{! "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. }}
      <div class='resource flex-group-center'>
        <label for='system.health.value' class='resource-label'>
          {{localize 'DBU.Actor.base.FIELDS.health.value.label'}}
        </label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            type='text'
            name='system.health.value'
            value='{{system.health.value}}'
            data-dtype='Number'
          >
          <span> / </span>
          <input
            type='text'
            name='system.health.max'
            value='{{system.health.max}}'
            data-dtype='Number'
          >
        </div>
      </div>

      <div class='resource flex-group-center'>
        <label for='system.ki.value' class='resource-label'>
          {{localize 'DBU.Actor.base.FIELDS.ki.value.label'}}
        </label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            type='text'
            name='system.ki.value'
            value='{{system.ki.value}}'
            data-dtype='Number'
          >
          <span> / </span>
          <input
            type='text'
            name='system.ki.max'
            value='{{system.ki.max}}'
            data-dtype='Number'
          >
        </div>
      </div>

      <div class='resource flex-group-center'>
        <label for='system.capacity.value' class='resource-label'>
          {{localize 'DBU.Actor.base.FIELDS.capacity.value.label'}}
        </label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            type='text'
            name='system.capacity.value'
            value='{{system.capacity.value}}'
            data-dtype='Number'
          >
          <span> / </span>
          <input
            type='text'
            name='system.capacity.max'
            value='{{system.capacity.max}}'
            data-dtype='Number'
          >
        </div>
      </div>

      <div class='resource flex-group-center'>
        <label class='resource-label'>
            {{localize 'DBU.Actor.Character.FIELDS.tierOfPower.label'}}
          </label>
          
          <div class='resource-content flexrow flex-center flex-between'>
            
            <input 
              type='text'
              disabled='true'
              name='{{localize 'DBU.Actor.Character.FIELDS.tierOfPower.label'}}'
              value='{{system.tierOfPower}}'
              data-dtype='Number'
            >
          </div>
      </div>

      <div class='resource flex-group-center'>
        {{#if (eq actor.type 'character')}}
          <label class='resource-label'>
            {{localize 'DBU.Actor.Character.FIELDS.attributes.level.value.label'}}
          </label>
          <div class='resource-content flexrow flex-center flex-between'>
            <input
              type='text'
              name='system.attributes.level.value'
              value='{{system.attributes.level.value}}'
              data-dtype='Number'
            >
          </div>
          
        {{/if}}
        {{#if (eq actor.type 'npc')}}
          <label class='resource-label'>
            {{localize 'DBU.Actor.NPC.FIELDS.cr.label'}} / {{localize 'DBU.Actor.NPC.xp.label'}}
          </label>
          <div class='resource-content flexrow flex-center flex-between'>
            <input
              type='text'
              name='system.cr'
              value='{{system.cr}}'
              data-dtype='Number'
            >
            <span></span>
            <input
              type='text'
              disabled='true'
              name='system.xp'
              value='{{system.xp}}'
              data-dtype='Number'
            >
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</header>